
<!DOCTYPE html>
<html lang="ro">
  <head>

  
	<%- include("../fragmente/head.ejs") %>

</head>
  
 
<body class="light">

	<%- include("../fragmente/header.ejs") %>

  
    
 
 
     
 
   
		<main>
			<p>Sterge utilizator</p>
			<form style="display: none;" id="sterge" method="post" action="/sterge_utiliz">
			  <label>
				Id: <input type="text" name="id_utiliz" id="id_utiliz" value="">
			  </label>
			  
			  <input type="submit" value="Submit">
			</form>
			<div>
				<h2>Useri</h2>
		
				<table id="profesori">
				  <tr>
					<th>id</th>
					<th>Nume</th>
					<th>Prenume</th>
					<th>Data</th>
					<th>Rol</th>
					<th>Stergere</th>
				  </tr>
		
				  <% for (var i = 0; i < useri.length; i++) { 
						if(useri[i].rol=="comun"){
						%>
						<tr id="<%= useri[i].id %>">
						  <td><%= useri[i].id %></td>
						  <td><%= useri[i].nume %></td>
						  <td><%= useri[i].email %></td>
						  <%  
							d=new Date(useri[i].dataInreg)
							sir_data=`${d.getDate()}/${d.getMonth()}/${d.getFullYear()} ${d.getHours()}:${d.getMinutes()}:${d.getSeconds()}`
						  %>
						  <td><%=  sir_data %></td>
						   <td><%=  useri[i].rol %></td>
						   <td class="sterge" onclick="stergeUtil(this)">Sterge</td>
						</tr> 
		   
						<% } %>			
				  <% } %>
				</table>
			</div>
			<script>
				function stergeUtil(trigger){
					var tr = trigger.parentElement;
					var id  = tr.id;
					document.getElementById('id_utiliz').value = id;
					document.getElementById('sterge').submit();
					
				}
			</script>

		</main>
    
      <%- include("../fragmente/footer.ejs") %>

<style>
	.sterge{
		cursor: pointer;
	}
</style>
 </body>


</html>